<% content_for :body_content_title do %>
  <%= @sermon.title %>
<% end %>

<% content_for :body do %>

  <section>
    <h1>Title</h1>
    <p>

      <%=raw @sermon.title %>

    </p>
  </section>

  <section>
    <h1>File</h1>
    <p>

      <% if @sermon.file.present? %>
        <%= link_to 'file', @sermon.file.url %>
      <% else %>
        file
      <% end %>

    </p>
  </section>

  <section>
    <h1>Date</h1>
    <p>

      <%=raw @sermon.date %>

    </p>
  </section>

<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="sermons">
      <% @sermons.each do |sermon| %>
        <li>
          <%= link_to sermon.title, refinery.sermons_sermon_path(sermon) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
