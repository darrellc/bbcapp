<ul>
  <% if ::Refinery::Sermons::Admin::ServicesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sermons_admin_services_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_sermons_admin_service_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Sermons::Admin::ServicesController.sortable? && ::Refinery::Sermons::Service.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Services"),
                 refinery.sermons_admin_services_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Services"),
                 refinery.sermons_admin_services_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
