<% content_for :body_content_title do %>
  <%= @sermon_group.name %>
<% end %>

<% content_for :body do %>

  <section>
    <h1>Name</h1>
    <p>

      <%=raw @sermon_group.name %>

    </p>
  </section>

  <section>
    <h1>Start Date</h1>
    <p>

      <%=raw @sermon_group.start_date %>

    </p>
  </section>

<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="sermon_groups">
      <% @sermon_groups.each do |sermon_group| %>
        <li>
          <%= link_to sermon_group.name, refinery.events_sermon_group_path(sermon_group) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
