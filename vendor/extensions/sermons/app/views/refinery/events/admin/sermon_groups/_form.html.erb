
<%= form_for [refinery, :events_admin, @sermon_group] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @sermon_group,
              :include_object_name => true %>




  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>




  <div class='field'>
    <%= f.label :start_date -%>
    <%= f.text_field :start_date -%>
  </div>



  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.sermon_groups.admin.sermon_groups.sermon_group'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @sermon_group.name) -%>
<% end -%>

