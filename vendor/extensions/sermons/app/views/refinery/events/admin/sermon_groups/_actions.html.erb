<ul>
  <% if ::Refinery::Events::Admin::SermonGroupsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.events_admin_sermon_groups_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_events_admin_sermon_group_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Events::Admin::SermonGroupsController.sortable? && ::Refinery::Events::SermonGroup.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Sermon Groups"),
                 refinery.events_admin_sermon_groups_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Sermon Groups"),
                 refinery.events_admin_sermon_groups_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
