
<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(sermon_group) -%>">
  <span class='title'>
    <%= sermon_group.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.events_sermon_group_path(sermon_group),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_events_admin_sermon_group_path(sermon_group),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.events_admin_sermon_group_path(sermon_group),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => sermon_group.name),
        :method => :delete %>
  </span>
</li>
